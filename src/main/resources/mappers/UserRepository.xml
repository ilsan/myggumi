<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ilsan.myggumi.web.repository.UserRepository">

    <select id="findByUserEmail" parameterType="String" resultType="MemberSession">
        select "userNo"
              ,"password"
              ,"email"
              ,"name"
              ,"address"
              ,"role"
        from USERS
        where "name" = #{username}
    </select>
    
    <insert id="joinUser" parameterType="Map" >
    	insert into member_user values(member_user_seq.nextval,#{id},#{password},#{name},#{zipCode},#{address1},#{address2},#{mobileNumber},#{email},#{role},sysdate)
    </insert>
    
    <select id="idCheck" parameterType="String" resultType="Integer">
    	select count(*) from member_user where "id"=#{id}
    </select>
    

</mapper>